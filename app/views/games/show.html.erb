<% if @game.pending? %>
  <%= render "show_pending", game: @game, challenger_user_game: @challenger_user_game, creator_user_game: @creator_user_game %>
<% elsif @game.ongoing? %>
  <%= render "show_ongoing", game: @game %>
<% elsif @game.finished? %>
  <%= render "show_finished", game: @game, opponent_user_game: @opponent_user_game, current_user_game:  @current_user_game %>
<% end %>
