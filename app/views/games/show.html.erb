<div
 data-controller="user_game-subscription"
 data-user_game-subscription-user_game-id-value="<%= @user_game.id %>"
 data-user_game-subscription-target = "game"
 >
  <% if @game.pending? %>
    <%= render "show_pending", game: @game, challenger_user_game: @challenger_user_game, creator_user_game: @creator_user_game, markers: @markers %>
  <% elsif @game.ongoing? %>
    <%= render "show_ongoing", game: @game, opponent_user_game: @opponent_user_game, markers: @markers, remaining_time_in_seconds: @remaining_time_in_seconds %>
  <% elsif @game.finished? %>
    <%= render "show_finished", game: @game, opponent_user_game: @opponent_user_game, current_user_game:  @current_user_game %>
  <% end %>
</div>
