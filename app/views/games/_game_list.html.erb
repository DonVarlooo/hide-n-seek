<div class="">
  <div class="container">
    <div class="row text-align-center">
      <div class="col-9">
        <h3 class="title-game">Join a Game:</h3>
      </div>
      <div class="col-2 pt-3">
        <%= link_to games_path do %>
          <i class="fa-solid fa-rotate-right fa-2xl btn-refresh" style="color: #243e36;"></i>
        <% end %>
      </div>
    </div>
  </div>
    <ol class="deco-lists list-unstyled">
      <% @games.sort_by { |obj| -obj.id }.each do |game| %>
        <div class="test-list">
          <li data-game-selection-target="btn"
              data-latitude="<%= game.lat %>"
              data-longitude="<%= game.lng %>"
              data-duration="<%= game.duration %>">
            <%= link_to join_game_path(game, user_lat: user_lat, user_lng: user_lng), data: {turbo_method: "PATCH"}, class: "text-decoration-none games-list d-flex" do  %>
              <%= game.name %>
            <% end %>
          </li>
        </div>
      <% end %>
    </ol>
</div>
