<div id="show-html">
  <div>Battle Area</div>
  <div class="">
    <div data-controller="location"
          data-location-markers-value="<%= @markers.to_json %>"
                  data-location-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      <div data-location-target="startTracking">
        <div id="map-home" class="" style="height: 300px" data-location-target="map"></div>
      </div>
    </div>
  </div>

  <div data-controller="timer" data-timer-duration-in-seconds-value="<%= @remaining_time_in_seconds %>">Time remaining: <span data-timer-target="counter"></span></div>
  <div>Target Name: <%= @opponent_user_game.user.user_name %></div>

  <div>
    <%= cl_image_tag @opponent_user_game.photo.key, height: 250, width: 500, crop: :fill %>
  </div>



  <div data-controller="qrcode"
       data-qrcode-scan-url-value="<%= scan_game_path(@game) %>">
    <button data-action="click->qrcode#startScanning">Scanner l'autre boloss</button>
    <button data-action="click->qrcode#stopScanning">ArrÃªter de scanner l'autre boloss</button>
    <video data-qrcode-target="video"></video>
  </div>



  <div class="bg-white p-5">
    <%= @opponent_user_game.user.qrcode.html_safe %>
  </div>


   <div><%= link_to games_path, class: "text-decoration-none" do %>
      <button class="btn-return">Quit</button>
    <% end %></div>

</div>
