<div class="container-forgot-passeword">

  <h2>Forgot your password?</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs-forgotpasseword">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Reset password", class:"btn-send-me" %>
    </div>
  <% end %>
</div>
  <div class="container-btn-forgot-passeword d-flex">
    <%= render "devise/shared/links" %>
  </div>
